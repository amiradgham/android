<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/clover"
                    android:layout_width="91dp"
                    android:layout_height="134dp"
                    android:layout_marginEnd="27dp"
                    android:elevation="6dp"
                    android:src="@drawable/clover" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_marginTop="25dp"
                    android:text="Welcome with Ekri.net to adding your house to Rent  "
                    android:textSize="20dp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="39dp"

                android:background="#00C4B9"
                android:textSize="15dp"
                android:textColor="#fff"
                android:text="  full form informations inputs >> Adding house" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""

                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:text=" Location of house :"
                android:textColor="#00C4B9"
                android:textSize="20sp"
                android:textStyle="italic" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="160dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"

                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:text=" Type of house :"
                android:textColor="#00C4B9"
                android:textSize="20sp"
                android:textStyle="italic" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="160dp"
                android:layout_height="34dp"
                android:layout_gravity="center_horizontal"
                android:spinnerMode="dropdown"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:text=" Room Number  :"
                android:textColor="#00C4B9"
                android:textSize="20sp"
                android:textStyle="italic" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="160dp"
                android:layout_height="34dp"
                android:layout_gravity="center_horizontal"

                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:text="surface of house (mÂ²) :"
                android:textColor="#00C4B9"
                android:textSize="20sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/surface"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="number"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:text=" Phone Number :"
                android:textColor="#00C4B9"
                android:textSize="20sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp"
                    android:text=" +214 :"
                    android:textColor="#172646"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:inputType="phone"
                    android:text="" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:text=" House Picture  :"
                android:textColor="#00C4B9"
                android:textSize="20sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/upload2" />

            <Button
                android:id="@+id/image1"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#642fb4ff"
                android:layout_marginTop="20dp"
                android:text="Upload images"
                android:drawableLeft="@drawable/ic_collections_black_24dp"
                android:textColor="#ffff" />
            <ProgressBar
                android:id="@+id/myProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateBehavior="cycle"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_"
                android:text="Add Housse"
                android:layout_marginTop="20dp"
                android:textColor="#ffff" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="
                        "
                android:visibility="invisible"/>
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>