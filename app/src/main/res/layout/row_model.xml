<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="10dp"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >

       <ImageView
           android:id="@+id/clover"
           android:layout_width="91dp"
           android:layout_height="134dp"
           android:layout_marginLeft="200dp"
           android:layout_marginEnd="272dp"
           android:elevation="6dp"
           android:src="@drawable/clover" />
   </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp">


        <ImageView
            android:id="@+id/teacherImageView"
            android:layout_width="141dp"
            android:layout_height="190dp"
            android:padding="5dp"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/nameTextView0"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/teacherImageView"
            android:background="#00C4B9"
            android:padding="2dp"
            android:text="House Result"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/nameTextView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="34dp"
            android:layout_toRightOf="@+id/teacherImageView"
            android:padding="5dp"
            android:textSize="15dp"
            android:text="Located at :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#376F86" />


        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="51dp"
            android:layout_toRightOf="@+id/teacherImageView"
            android:padding="5dp"
            android:text="Teacher Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/teacherImageView"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="47dp"
            android:layout_toRightOf="@+id/teacherImageView"
            android:padding="5dp"
            android:text="Teacher Description..."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/descriptionTextView2"
            android:layout_width="123dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/teacherImageView"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="43dp"
            android:layout_toRightOf="@+id/teacherImageView"
            android:padding="5dp"
            android:text="Teacher Description..."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/descriptionTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/teacherImageView"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="72dp"
            android:layout_toRightOf="@+id/teacherImageView"
            android:padding="5dp"
            android:text="Room Number :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#376F86"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/descriptionTextView4"
            android:layout_width="207dp"
            android:layout_height="31dp"
            android:layout_alignBottom="@+id/teacherImageView"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="1dp"
            android:layout_toRightOf="@+id/teacherImageView"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:padding="5dp"
            android:textSize="15dp"
            android:text="Teacher Description..."
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <ProgressBar
            android:id="@+id/myDataLoaderProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_marginTop="10dp"
            android:indeterminateTint="#00C4B9"
            android:indeterminateBehavior="cycle"
            android:visibility="gone" />
        <ListView
            android:id="@+id/myListView"
            android:layout_weight="0.5"
            android:numColumns="auto_fit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>